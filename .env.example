# LoL Data MCP Server Environment Variables
# Copy this file to .env and fill in your actual values

# Environment Configuration
LOL_MCP_ENVIRONMENT=development

# Server Configuration  
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
SERVER_DEBUG=true
SERVER_WORKERS=1

# Database Configuration
DATABASE_URL=postgresql://lol_user:lol_pass@localhost:5432/lol_data_dev
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_ECHO=false
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5
REDIS_RETRY_ON_TIMEOUT=true

# Data Sources Configuration
DATA_SOURCES_WIKI_BASE_URL=https://wiki.leagueoflegends.com
DATA_SOURCES_WIKI_RATE_LIMIT=1.0
DATA_SOURCES_RIOT_API_ENABLED=true
DATA_SOURCES_RIOT_API_KEY=your_riot_api_key_here
DATA_SOURCES_RIOT_API_RATE_LIMIT=0.5

# Logging Configuration
LOGGING_LEVEL=INFO
LOGGING_FORMAT=json
LOGGING_FILE_PATH=/var/log/lol-mcp-server.log
LOGGING_MAX_FILE_SIZE=10MB
LOGGING_BACKUP_COUNT=5

# Cache Configuration
CACHE_TTL_CHAMPION_DATA=3600
CACHE_TTL_ITEM_DATA=3600
CACHE_TTL_SEARCH_RESULTS=300
CACHE_MAX_MEMORY_CACHE_SIZE=1000

# Security Configuration
SECURITY_API_KEY_HEADER=X-API-Key
SECURITY_RATE_LIMIT_PER_MINUTE=100
SECURITY_ALLOWED_ORIGINS=["*"]
API_KEY=your_secret_api_key_here

